generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  dishes    Dish[]

  @@map("categories")
}

model Dish {
  id          String     @id @default(uuid())
  name        String
  description String
  price       Float
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])
  image       String?
  available   Boolean   @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orderItems  OrderItem[]

  @@map("dishes")
}

model GalleryImage {
  id        String   @id @default(uuid())
  title     String
  category  String
  url       String
  visible   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("gallery_images")
}

model User {
  id           String   @id @default(uuid())
  name         String
  phone        String   @unique
  email        String   @unique
  passwordHash String
  avatar       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  role         Role     @default(Usuario)
  orders       Order[]

  @@map("users")
}

model DailyMenu {
  id                      String   @id @default(uuid())
  date                    DateTime @unique @default(now())
  price                   Float
  includes                String[]
  starters                String[]
  mains                   String[]
  desserts                String[]
  active                  Boolean  @default(true)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  completeSingleDishPrice Float?
  singleDishPrice         Float?

  @@map("daily_menus")
}

model Order {
  id              String      @id @default(uuid())
  orderNumber     Int         @unique @default(autoincrement())
  type            OrderType
  status          OrderStatus @default(pending)
  userId          String?
  customerName    String
  customerPhone   String
  customerAddress String?
  notes           String?
  subtotal        Float
  total           Float
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  items           OrderItem[]
  user            User?       @relation(fields: [userId], references: [id])

  @@map("orders")
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  dishId    String
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
  dish      Dish     @relation(fields: [dishId], references: [id])
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

model DailyMenuOption {
  id        String              @id @default(uuid())
  name      String
  type      DailyMenuOptionType
  active    Boolean             @default(true)
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  @@map("daily_menu_options")
}


enum DailyMenuOptionType {
  starter
  main
  dessert
}

enum Role {
  Usuario
  Administrador
}

enum OrderType {
  takeaway
  dinein
}

enum OrderStatus {
  pending
  confirmed
  preparing
  ready
  completed
  cancelled
}


